{
    "manifest_version": 3,
    "name": "YouTube Transcript Extractor",
    "version": "1.0.0",
    "description": "Extract and summarize YouTube video transcripts. Easily copy captions from any YouTube video and prepare them for AI summarization.",
    "author": "James Khor",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://*.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "YouTube Transcript Extractor"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "minimum_chrome_version": "88",
    "short_name": "YTCC",
    "homepage_url": "https://github.com/jameskhor/youtube-transcript-extractor"
} 